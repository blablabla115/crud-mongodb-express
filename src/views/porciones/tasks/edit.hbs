<h1 class="mx-3">Edit task</h1>
<div class="mx-3">
  <form action="/edit/{{task._id}}" method="POST">
    <div class="mb-3">
      <label class="form-label">Title</label>
      <input class="form-control" name="title" id="title" value={{ task.title }}>
    </div>
    <div class="mb-3">
      <label class="form-label">Description</label>
      <textarea class="form-control" name="description" id="description">{{task.description}}</textarea>
    </div>
    <button class="btn btn-primary">save</button>
  </form>
</div>
